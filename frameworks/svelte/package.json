{
	"name": "@resubmit/svelte",
	"version": "0.1.0",
	"type": "module",
	"author": "Gyen Abubakar Sadick <gyenabubakar@gmail.com> (www.gyen.dev)",
	"description": "A form validation library for Svelte apps, using any validation library that conforms to Standard Schema.",
	"license": "MIT",
	"homepage": "https://runed-forms.gyen.dev",
	"bugs": "https://github.com/gyenabubakar/resubmit/issues",
	"repository": {
		"url": "https://github.com/gyenabubakar/resubmit"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "node_modules/.bin/svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"clean": "rimraf node_modules build dist .svelte-kit .out .cache .vite .turbo"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"keywords": [
		"form",
		"validation",
		"forms",
		"svelte",
		"sveltekit",
		"schema",
		"arktype",
		"valibot",
		"zod",
		"Standard Schema",
		"Effect Schema",
		"Arri Schema",
		"TypeMap",
		"Formgator",
		"decoders",
		"ReScript Schema",
		"Skunkteam Types",
		"ts.data.json",
		"DreamIt GraphQL-Std-Schema"
	],
	"engines": {
		"node": ">=20.18.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@shared/types": "workspace:*",
		"@shared/utils": "workspace:*",
		"@standard-schema/spec": "1.0.0"
	},
	"devDependencies": {
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.525.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/lodash.merge": "^4.6.9",
		"@vitest/browser": "^3.2.3",
		"bits-ui": "^2.8.6",
		"clsx": "^2.1.1",
		"playwright": "^1.53.0",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.0.0",
		"valibot": "^1.1.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0",
		"zod": "^3.25.74"
	}
}
